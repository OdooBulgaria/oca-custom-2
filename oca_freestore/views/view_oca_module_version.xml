<openerp><data>

    <record id="view_oca_module_version_search" model="ir.ui.view">
        <field name="model">oca.module.version</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="summary"/>
                <field name="description"/>
                <field name="module_id"/>
                <field name="repository_branch_id"/>
                <field name="repository_id"/>
                <field name="license_id"/>
                <field name="organization_serie_id"/>
                <filter string="License" context="{'group_by' : 'license_id'}"/>
                <filter string="Module" context="{'group_by' : 'module_id'}"/>
                <filter string="Repository Branch" context="{'group_by' : 'repository_branch_id'}"/>
            </search>
        </field>
    </record>

    <record id="view_oca_module_version_tree" model="ir.ui.view">
        <field name="model">oca.module.version</field>
        <field name="arch" type="xml">
            <tree>
                <field name="complete_name"/>
                <field name="organization_serie_id"/>
                <field name="license_id"/>
            </tree>
        </field>
    </record>

    <record id="view_oca_module_version_form" model="ir.ui.view">
        <field name="model">oca.module.version</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="complete_name"/></h1>
                    </div>
                        <h3 class="oe_fade">
                            <field name="summary" class="oe_inline"/>
                        </h3>
                    <div class="oe_clear"/>
                    <notebook>
                        <page string="Information">
                            <group col="4">
                                <field name="name"/>
                                <field name="author"/>
                                <field name="module_id"/>
                                <field name="website"/>
                                <field name="license_id"/>
                                <field name="repository_id"/>
                                <field name="repository_branch_id"/>
                                <field name="organization_serie_id"/>
                                <field name="author_ids" widget="many2many_tags"/>
                            </group>
                            <field name="description" colspan="4" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_oca_module_version_graph" model="ir.ui.view">
        <field name="model">oca.module.version</field>
        <field name="arch" type="xml">
            <graph type="pivot" stacked="True">
                <field name="organization_serie_id" type="row"/>
                <field name="license_id" type="col"/>
            </graph>
        </field>
    </record>

</data></openerp>




